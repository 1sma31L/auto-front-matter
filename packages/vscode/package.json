{
	"publisher": "CondorHero",
	"name": "auto-front-matter",
	"displayName": "auto-front-matter",
	"version": "0.0.1",
	"private": true,
	"description": "Automatic Front Matter for Markdown",
	"categories": [
		"Other"
	],
	"main": "./dist/index.js",
	"icon": "assets/ico-128x128.png",
	"engines": {
		"vscode": "^1.73.0"
	},
	"activationEvents": [
		"workspaceContains:*.md",
		"onCommand:auto-front-matter.createTemplate"
	],
	"contributes": {
		"commands": [
			{
				"command": "auto-front-matter.createTemplate",
				"category": "auto-front-matter",
				"title": "create front-matter template"
			}
		]
	},
	"scripts": {
		"build": "tsup src/index.ts --external vscode",
		"dev": "nr build --watch",
		"vscode:prepublish": "nr build",
		"publish": "vsce publish --no-dependencies",
		"pack": "vsce package --no-dependencies"
	},
	"devDependencies": {
		"@types/vscode": "^1.73.0",
		"fast-glob": "^3.2.12",
		"gray-matter": "^4.0.3",
		"reading-time": "^1.5.0",
		"simple-git": "^3.14.1",
		"tsup": "^6.3.0",
		"vsce": "^2.13.0"
	}
}
